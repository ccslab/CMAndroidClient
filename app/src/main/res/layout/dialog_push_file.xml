<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pushFileTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/push_file" />

    <TextView
        android:id="@+id/receiverTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/file_receiver" />

    <EditText
        android:id="@+id/fileReceiverEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPushFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onConfirmPushFile"
            android:text="@string/button_confirm" />

        <Button
            android:id="@+id/buttonCancelPushFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCancelPushFile"
            android:text="@string/button_cancel" />
    </LinearLayout>
</LinearLayout>
